{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [{
      name      : "scheduler.mindi.io",
      script    : "bin/www",
      env: {
        COMMON_VARIABLE: "true"
      },
      env_production : {
        NODE_ENV: "production"
      }
  }],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    production : {
      user : "root",
      host : "scheduler.mindi.io",
      ref  : "origin/master",
      repo : "git@gitlab.com:mindi/scheduler.git",
      path : "/var/www/scheduler.mindi.io",
      "post-deploy" : "cp nginx/default /etc/nginx/sites-available/ && service nginx restart && npm install && pm2 startOrRestart ecosystem.json --env production"
    },
    dev : {
      user : "root",
      host : "scheduler.mindi.io",
      ref  : "origin/master",
      repo : "git@gitlab.com:mindi/scheduler.git",
      path : "/var/www/scheduler.mindi.io",
      "post-deploy" : "cp nginx/default /etc/nginx/sites-available/ && service nginx restart && npm install && pm2 startOrRestart ecosystem.json --env dev",
      env  : {
        NODE_ENV: "dev"
      }
    }
  }
}
